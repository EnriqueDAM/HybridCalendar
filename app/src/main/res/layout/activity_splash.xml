<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.enrique.financescalendar.SplashActivity">

    <ImageView
        android:id="@+id/splashScreen"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/splash_image_height"
        android:padding="@dimen/splash_image_inner_padding"
        android:src="@drawable/splash"/>

    <TextView
        android:id="@+id/textLoading"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/custom_vertical_margin"
        android:text="Loading ..."
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/splashScreen" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/custom_vertical_margin"
        style="@android:style/Widget.Holo.ProgressBar.Small"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textLoading"
        android:visibility="gone"/>
</RelativeLayout>
